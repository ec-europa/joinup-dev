/**
 * Implements hook_theme().
 */
function joinup_core_theme($existing, $type, $theme, $path) {
  return array(
    'joinup_tiles' => array(
      'path' => drupal_get_path('module', 'joinup_core') . '/templates',
    ),
  );
}

