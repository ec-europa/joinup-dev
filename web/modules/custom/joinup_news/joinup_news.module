<?php

/**
 * @file
 * Provides functionality for the news content entity.
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Entity\EntityTypeInterface;
use Drupal\Core\Form\FormStateInterface;
use Drupal\joinup_core\Exception\MissingRelationException;

/**
 * Implements hook_entity_bundle_field_info_alter().
 */
function joinup_news_entity_bundle_field_info_alter(&$fields, EntityTypeInterface $entity_type, $bundle) {
  // @todo Add test coverage for these constraints.
  // @see https://webgate.ec.europa.eu/CITnet/jira/browse/ISAICP-2500
  if ($entity_type->id() == 'node' && $bundle == 'news') {
    if (!empty($fields['field_news_headline'])) {
      $fields['field_news_headline']->addConstraint('UniqueFieldInBundle', ['bundles' => ['news']]);
    }

    if (!empty($fields['field_news_shared_in'])) {
      $fields['field_news_shared_in']->addConstraint('UniqueFieldValue');
      $fields['field_news_shared_in']->addConstraint('ParentReference', [
        'service' => 'joinup_core.relations_manager',
        'method' => 'getParent',
      ]);
      $fields['field_news_shared_in']->addConstraint('NewsSharedInValidReference');
    }
  }
}

/**
 * Returns the appropriate workflow to use for the news entity.
 *
 * The callback ensures that even if the parent is updated and the moderation
 * status changes, it will still use the proper workflow.
 *
 * @param \Drupal\Core\Entity\EntityInterface $entity
 *   The news entity.
 *
 * @return string
 *   The id of the workflow to use.
 *
 * @throws Exception
 *    Thrown when the function is called for a different bundle.
 */
function joinup_news_workflow_selector(EntityInterface $entity) {
  if ($entity->bundle() != 'news') {
    throw new Exception('This method can only be called for news entities.');
  }
  /** @var \Drupal\joinup_core\JoinupRelationManager $relation_manager */
  $relation_manager = \Drupal::service('joinup_core.relations_manager');
  try {
    $moderation = $relation_manager->getParentModeration($entity);
  }
  catch (MissingRelationException $e) {
    // Throw a more helpful exception if the news article doesn't have a parent
    // collection or solution.
    throw new \Exception('Cannot determine the moderation workflow type on a news article that doesn\'t belong to a collection or solution.');
  }
  return $moderation == 1 ? 'node:news:pre_moderated' : 'node:news:post_moderated';
}

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * Disables access to the news-specific "Shared in" field when the parent entity
 * is not a solution. Sharing into collections is handled by the share modal.
 */
function joinup_news_form_node_news_form_alter(&$form, FormStateInterface $form_state) {
  $entity = $form_state->getFormObject()->getEntity();
  $parent = \Drupal::service('joinup_core.relations_manager')->getParent($entity);
  if (!empty($parent) && $parent->bundle() !== 'solution') {
    $form['field_news_shared_in']['#access'] = FALSE;
  }
}
