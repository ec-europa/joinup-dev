{
  "require": {
    "composer/installers": "^1.5.0",
    "drupal/core": "${DRUPAL}",
    "drupal/core-composer-scaffold": "*",
    "drupal/pathauto": "*",
    "drupal/rdf_entity": "*",
    "drupal/token": "*",
    "drush/drush": "~10",
    "easyrdf/easyrdf": "1.1.1 as 0.9.2",
    "ml/json-ld": "^1.0"
  },
  "require-dev": {
    "behat/mink-goutte-driver": "~1.2",
    "mikey179/vfsstream": "~1.2",
    "mglaman/phpstan-drupal": "^0.12.6",
    "phpspec/prophecy": "^1.7",
    "phpstan/phpstan-deprecation-rules": "^0.12.5",
    "phpunit/phpunit": "${PHPUNIT}",
    "symfony/phpunit-bridge": "^5.1.4"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "${TRAVIS_BUILD_DIR}"
    },
    {
      "type": "github",
      "url": "https://github.com/idimopoulos/sparql_entity_storage.git"
    },
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "extra": {
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/{$name}": ["type:drupal-module"]
    },
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      }
    }
  }
}
