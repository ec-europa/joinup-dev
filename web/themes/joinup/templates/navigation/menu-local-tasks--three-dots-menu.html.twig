{#
/**
 * @file
 * Theme override to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing primary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 */
#}
{% if primary %}
  <button id="local-tasks-primary" class="mdl-button mdl-js-button mdl-button--icon">
    <span class="icon icon--dots"></span>
  </button>
  <h2 class="visually-hidden">{{ 'Primary tabs'|t }}</h2>
  <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="local-tasks-primary">{{ primary }}</ul>
{% endif %}
{% if secondary %}
  <button id="local-tasks-secondary" class="mdl-button mdl-js-button mdl-button--icon">
    <span class="icon icon--dots"></span>
  </button>
  <h2 class="visually-hidden">{{ 'Secondary tabs'|t }}</h2>
  <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="local-tasks-secondary">{{ secondary }}</ul>
{% endif %}
