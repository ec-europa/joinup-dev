{
    "name": "ec-europa/joinup",
    "description": "Joinup is a collaborative platform created by the European Commission and funded by the European Union via the Interoperability Solutions for European Public Administrations (ISA) Programme. It offers several services that aim to help e-Government professionals share their experience with each other.",
    "type": "project",
    "license": "EUPL",
    "require": {
        "composer/installers": "^1.0.20",
        "cweagans/composer-patches": "~1.0",
        "drupal/console": "~0.10",
        "drupal/core": "8.0.*",
        "drupal/og": "dev-8.x-1.x",
        "drush/drush": "~8.0",
        "pear/console_table": "dev-php7-support as 1.2.0",
        "php": ">=5.5.9"
    },
    "require-dev": {
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/coder": "dev-8.x-2.x",
        "drupal/config_devel": "~8.1.0",
        "drupal/config_update": "8.1.*@dev",
        "drupal/devel": "8.1.*@dev",
        "drupal/drupal-extension": "~3.0",
        "drupal/phing-drush-task": "1.0",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "dev-master#10d7c48c9a4129463052321b52450d98983c4332",
        "mikey179/vfsStream": "~1.2",
        "pfrenssen/phpcs-pre-push": "1.0",
        "phing/phing": "~2.10",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "2.7.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Drupal\\DrupalProject\\": "tests/src",
            "DrupalProject\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": "sh ./scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/config_devel": {
                "Issue #2603268: Add support for profiles": "https://www.drupal.org/files/issues/2603268-8.patch"
            }
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        },
        {
            "type": "vcs",
            "url": "http://git.drupal.org/project/coder.git"
        },
        {
            "type": "package",
            "package": {
                "name": "drupal/phing-drush-task",
                "version": "1.0",
                "source": {
                    "url": "http://git.drupal.org/project/phingdrushtask.git",
                    "type": "git",
                    "reference": "7.x-1.0"
                },
                "autoload": { "classmap": [ "DrushTask.php" ] },
                "include-path": [ "." ]
            }
        },
        {
            "type": "package",
            "package": {
                "name": "pfrenssen/phpcs-pre-push",
                "version": "1.0",
                "type": "git-hook",
                "source": {
                    "url": "https://gist.github.com/498fc52fea3f965f6640.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "_comment": "Temporary fork of pear/console_table with a fix for PR #13.",
            "type": "vcs",
            "url": "git@github.com:ec-europa/Console_Table"
        },
        {
            "_comment": "Amitai's fork is the main development repository for Organic Groups. Remove this once a D8 release is made on drupal.org.",
            "type": "vcs",
            "url": "git@github.com:amitaibu/og"
        }
    ]
}
